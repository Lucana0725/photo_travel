<div class="container mt-5">
  <div class="row mb-3">
    <h2>Sign up</h2>
  </div>

  <div class="row">
    <div class="col-4">
      <!--<#%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>-->
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user' do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :profile_image, "プロフィール画像(任意)", class: "form-label" %><br />
          <%= f.file_field :profile_image  %>

        <div class="field">
          <%= f.label :nickname, "ニックネーム(こちらが表示名となります) *必須", class: "form-label" %><br />
          <%= f.text_field :nickname, autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :last_name, "姓 *必須", class: "form-label" %><br />
          <%= f.text_field :last_name, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :first_name, "名 *必須", class: "form-label" %><br />
          <%= f.text_field :first_name, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :last_name_kana, "セイ *必須", class: "form-label" %><br />
          <%= f.text_field :last_name_kana, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :first_name_kana, "メイ *必須", class: "form-label" %><br />
          <%= f.text_field :first_name_kana, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス *必須", class: "form-label" %><br />
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード *必須", class: "form-label" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード(確認用)", class: "form-label" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="actions text-right mt-3">
          <%= f.submit "登録する", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

