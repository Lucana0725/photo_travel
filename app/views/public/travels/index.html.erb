<div class="row justify-content-center">
  <div class="col-8">
    <div class="row mb-5">
      <div class="d-block mx-auto">
        <h1>Travels</h1>
      </div>
    </div>

    <div class="row d-flex flex-column">
      <% @travels.each_with_index do |travel, i| %>
      <div class="col-5 mx-auto" style="height:400px;">
        <div class="travels-in-index <% if i != 0 %> pt-5 <% end %> <% if i != @travels.size - 1 %> pb-5 <% end %>" style="border-bottom:1px solid #ddd;" >
            <div class="text-center">
              <!--各投稿へのリンク-->
              <%= link_to travel_path(travel.id) do %>
                <%= image_tag travel.get_image(700, 700), class: "w-100 mb-2" %>
              <% end %>
            </div>

            <!--投稿者名（users#showへ遷移）-->
            <div>
              <%= link_to user_path(travel.user.id) do %>
                <%= image_tag travel.user.get_profile_image(30, 30), class: "rounded-circle" %>
                <%= travel.user.nickname %>
              <% end %>
            </div>

            <!--投稿タイトル（travels#showへ遷移）-->
            <div>
              <%= link_to travel_path(travel.id) do %>
                <%= travel.title %>
              <% end %>
              <span>♥ <%= travel.favorites.count %>いいね！</span>
              <span><%= travel.comments.count %> コメント</span>
            </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>