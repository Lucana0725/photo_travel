<h1>Profile Edit</h1>

<%= form_with model: @user, url: user_update_path, method: :@patch do |f| %>
  <div>
    <%= f.label :image, "プロフィール画像" %></br>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div>
    <%= f.label :nickname, "ニックネーム" %></br>
    <%= f.text_field :nickname %>
  </div>
  <div>
    <%= f.label :introduction, "自己紹介" %></br>
    <%= f.text_area :introduction %>
  </div>
  <%= f.submit "変更を保存" %>
<% end %>

<%= link_to "退会する", unsubscribe_path %>