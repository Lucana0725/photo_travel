<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="row justify-content-center">
        <h1>Profile Edit</h1>
      </div>

      <div class="row justify-content-center mt-5">
        <div class="col-8">
          <%= form_with model: @user, url: user_path(current_user.id), method: :patch do |f| %>
            <div class="row">
              <div class="col-12 col-md-6 mb-3 pr-5 text-center text-md-right" style="font-weight:bold;">
                <%= f.label :profile_image, "プロフィール画像" %>
              </div>
              <div class="col-12 col-md-6 mb-3 pr-5">
                <%= f.file_field :profile_image, accept: 'image/*' %>
              </div>
            </div>
            <div class="row">
              <div class="col-12 col-md-6 mb-3 pr-5 text-center text-md-right" style="line-height:38px; font-weight:bold;">
                <%= f.label :nickname, "ニックネーム" %>
              </div>
              <div class="col-12 col-md-6 mb-3 pr-5">
                <%= f.text_field :nickname, class: "form-control" %>
              </div>
            </div>
            <div class="row">
              <div class="col-12 col-md-6 mb-3 pr-5 text-center text-md-right" style="line-height:86px; font-weight:bold;">
                <%= f.label :introduction, "自己紹介文" %>
              </div>
              <div class="col-12 col-md-6 mb-3 pr-5">
                <%= f.text_area :introduction, rows: 3, class: "form-control" %>
              </div>
            </div>
            <div class="row">
              <div class="col-12 col-md-6 pr-5 mb-3 mb-md-0 text-center text-md-right">
                <%= link_to "退会する", unsubscribe_path, class: "btn btn-danger w-50" %>
              </div>
              <div class="col-12 col-md-6 pr-5 text-center">
                <%= f.submit "変更を保存する", class: "btn btn-success w-50" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>