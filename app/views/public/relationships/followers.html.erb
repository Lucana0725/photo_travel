<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="text-center">フォロワー一覧</h1>
      <!--<div class="row justify-content-center">-->
      <!--  <h1>フォロワー一覧</h1>-->
      <!--</div>-->

      <div class="row justify-content-center mt-5">
        <div class="col-6">
          <% if @users.exists? %>
            <% @users.each_with_index do |user, i| %>
            <div class="d-flex <% if i != 0 %> pt-3 <% end %> <% if i != @users.size - 1 %> pb-3 <% end %>" style="<% if i != @users.size - 1 %> border-bottom:1px solid #eee; <% end %>">
              <div class="col-4 text-center">
                <%= link_to user_path(user) do %>
                <div>
                  <%= image_tag user.get_profile_image(75, 75), class: "rounded-circle" %>
                </div>
                <div>
                  <%= user.nickname %>
                </div>
                <% end %>  <!--link_toのend-->
              </div>
              <div class="col-8 d-flex align-items-center">
                <%= user.introduction %>
              </div>
            </div>
            <% end %>  <!--eachのend-->
          <% else %>
            <div>フォロワーはまだいません</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
