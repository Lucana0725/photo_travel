<div class="container mt-5">
  <div class="row mb-3">
    <h2>Log in As "Admin"</h2>
  </div>

  <div class="row">
    <div class="col-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "Email for Admin", class: "form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email_for_admin@example.com", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "form-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <!--<#% if devise_mapping.rememberable? %>-->
        <!--  <div class="field">-->
        <!--    <#%= f.check_box :remember_me %>-->
        <!--    <#%= f.label :remember_me %>-->
        <!--  </div>-->
        <!--<#% end %>-->

        <div class="actions text-right mt-3">
          <%= f.submit "Log in", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>

    <%= render "admin/shared/links" %>
  </div>
</div>

