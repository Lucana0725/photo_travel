<div class="container">
  <div class="row">
    <h1>
      <%= @user.nickname %> さんの会員情報詳細画面
    </h1>
  </div>
  
  <div class="row">
    <!--プロフィール画像(必要であれば)-->
    <%= image_tag @user.get_profile_image(100, 100) %>
  </div>
    
  <div class="row">
    <table class="table table-borderless">
      <tr>
        <th>ユーザーID</th>
        <td><%= @user.id %></td>
      </tr>
      <tr>
        <th>ニックネーム</th>
        <td><%= @user.nickname %></td>
      </tr>
      <tr>
        <th>登録名（姓）</th>
        <td><%= @user.last_name %></td>
        <th>（名）</th>
        <td><%= @user.first_name %></td>
      </tr>
      <tr>
        <th>登録名（セイ）</th>
        <td><%= @user.last_name_kana %></td>
        <th>（メイ）</th>
        <td><%= @user.first_name_kana %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
          <% if @user.is_deleted %>
            <span class="text-secondary">退会</span>
          <% else %>
            <span class="text-success">有効</span>
          <% end %>
        </td>
      </tr>
    </table>
    
    <div class="">
      <%= link_to "編集する", edit_admin_user_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>